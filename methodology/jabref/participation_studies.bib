  pages = {4},
  pmid = {25505828},
  publisher = {Elsevier BV},
  qualityassured = {qualityAssured},
  title = {The true meaning of research participation},
  url = {https://www.semanticscholar.org/paper/6478d2d677daae4f19572c1e562fef518f4c2a0e},
